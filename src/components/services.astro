---
// Props del componente Services
export interface Props {
  title?: string;
}

const { title = "Nuestros Servicios" } = Astro.props;

const services = [
  {
    title: "Desarrollo Web",
    description: "Creamos sitios web modernos y responsivos",
    icon: "üåê"
  },
  {
    title: "Dise√±o UI/UX",
    description: "Dise√±amos experiencias de usuario intuitivas",
    icon: "üé®"
  },
  {
    title: "Consultor√≠a",
